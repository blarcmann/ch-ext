{
  "manifest_version": 2,
  "name": "blm",
  "version": "0.1",
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts" : ["background.js"]
  },
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "sketch/index.html",
    "default_title": "A popup bitch" 
  }
}
